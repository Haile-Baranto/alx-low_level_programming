CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f
NAME = school

SRC = main.c \
      file1.c \
      file2.c

OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
